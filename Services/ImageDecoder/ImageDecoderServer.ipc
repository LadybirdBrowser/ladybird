#include <LibCore/AnonymousBuffer.h>

endpoint ImageDecoderServer
{
    init_transport(int peer_pid) => (int peer_pid)
    start_decoding_image(Optional<Gfx::IntSize> ideal_size, Optional<ByteString> mime_type) => (i64 image_id)
    partial_image_data_became_available(i64 image_id, ByteBuffer data) =|
    no_more_data_for_image(i64 image_id) =|
    cancel_decoding(i64 image_id) =|

    connect_new_clients(size_t count) => (Vector<IPC::File> sockets)
}
