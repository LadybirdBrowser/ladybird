{
    "name": "Ladybird Development",
    "id": "ladybird",
    "version": "2.0.1",
    "description": "Enable development of Ladybird libraries and applications",
    "options": {
        "distro": {
            "type": "string",
            "proposals": [
                "ubuntu",
                "fedora",
                "arch",
                "alpine"
            ],
            "default": "ubuntu",
            "description": "Select the base distribution for the container"
        },
        "llvm_version": {
            "type": "string",
            "proposals": [
                19,
                20,
                "trunk"
            ],
            "default": 20,
            "description": "Select LLVM compiler version to use"
        }
    },
    "containerEnv": {
        "CC": "clang-20",
        "CXX": "clang++-20",
        "XDG_RUNTIME_DIR": "/tmp"
    }
}
